        </javadoc>
    </target>

    <target name="testreport">
        <junitreport todir="${testreport.dir}">
            <fileset dir="${testreport.dir}" includes="TEST-*.xml"/>
            <report todir="${testreport.dir}"/>
        </junitreport>
    </target>

    <target name="javadoc">
        <javadoc
                destdir="docs/api"
                author="true"
                version="true"
                use="true"
                windowtitle="DDogleg Numerics"
                overview="src/overview.html">

            <packageset dir="src" defaultexcludes="yes">
                <include name="org/ddogleg/**"/>
            </packageset>

			<link offline="false" href="http://ejml.org/javadoc/" packagelistloc="package-list" />

            <bottom><![CDATA[<i>Copyright &#169; 2012-2015 Peter Abeles All Rights Reserved.</i>]]></bottom>

        </javadoc>
		<jar compress="true" destfile="docs/${ant.project.name}-doc.jar" basedir="docs/api" />
    </target>


    <target name="clean-build" depends="clean,jar"/>

    <target name="main" depends="clean,jar"/>
</project>
